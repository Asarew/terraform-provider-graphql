# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
  list: [String!]!
}

type User {
  id: ID!
  name: String!
}

type Query {
  todo: Todo!
}

input NewTodo {
  text: String!
  userId: String!
  list: [String!]!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  updateTodo(id: String!, input: NewTodo!): Todo!
  deleteTodo(input: String!): Todo!
}